---
interface Item {
  name: string;
  item?: string;
}

const { items } = Astro.props as { items: Item[] };
---

<script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    "itemListElement": [
      {
        "@type": "ListItem",
        "position": 1,
        "item": {
          "@type": "Thing",
          "@id": "https://codenetic.tech",
          "name": "Home"
        }
      },
      {
        "@type": "ListItem",
        "position": 2,
        "item": {
          "@type": "Thing",
          "@id": "https://codenetic.tech/blog",
          "name": "Blog"
        }
      },
      ...items.map((item, index) => {
        const position = index + 3;
        return {
          "@type": "ListItem",
          "position": position,
          "item": {
            "@type": "Thing",
            "@id": item.item ?? "",
            "name": item.name
          }
        };
      })
    ]
  }
</script>
