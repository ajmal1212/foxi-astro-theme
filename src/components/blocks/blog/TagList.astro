---
// src/components/blocks/blog/TagList.astro
const { tags } = Astro.props
---

<div class="tag-list">
  {tags.map(tag => (
    <a href={`/blog/tag/${tag.toLowerCase().replace(/\s+/g, '-')}/`} class="tag">
      {tag}
    </a>
  ))}
</div>

<style>
  .tag-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    justify-content: center;
    max-width: 800px;
    margin: 0 auto;
  }
  
  .tag {
    display: inline-block;
    padding: 0.5rem 1.25rem;
    background: white;
    border: 1px solid #eaeaea;
    border-radius: 50px;
    text-decoration: none;
    color: #333;
    font-size: 0.9rem;
    transition: all 0.2s ease;
  }
  
  .tag:hover {
    background: #0070f3;
    color: white;
    border-color: #0070f3;
    transform: translateY(-2px);
    box-shadow: 0 4px 6px rgba(0, 112, 243, 0.1);
  }
</style>